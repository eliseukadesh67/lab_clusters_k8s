<%- include('partials/header') %>

<h1>Suas Playlists</h1>

<div class="card my-4">
    <div class="card-body">
        <h5 class="card-title mb-3"><i class="fas fa-plus-circle me-2 text-primary"></i>Nova Playlist</h5>
        <form action="/playlists" method="POST" class="d-flex gap-2">
            <input type="text" name="name" class="form-control" placeholder="Nome da playlist" required>
            <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-plus me-2"></i>Criar
            </button>
        </form>
    </div>
</div>

<hr class="my-4">

<h2><i class="fas fa-cassette-tape me-2 text-secondary"></i>Playlists Salvas</h2>
<div class="list-group">
    <% if (playlists && playlists.items && playlists.items.length > 0) { %>
        <% playlists.items.forEach(playlist => { %>
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/playlists/<%= playlist.id %>" class="text-decoration-none text-dark fw-bold d-flex align-items-center">
                    <i class="fas fa-play-circle me-3 text-primary"></i>
                    <%= playlist.name %>
                </a>
                <form action="/playlists/delete/<%= playlist.id %>" method="DELETE" class="m-0">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Excluir esta playlist?')">
                        <i class="fas fa-trash me-1"></i>Excluir
                    </button>
                </form>
            </div>
        <% }) %>
    <% } else { %>
        <div class="list-group-item text-center text-muted py-4">
            <i class="fas fa-music fa-2x mb-3 d-block"></i>
            Nenhuma playlist criada ainda.
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
